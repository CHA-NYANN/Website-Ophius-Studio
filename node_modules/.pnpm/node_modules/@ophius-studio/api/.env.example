# Ophius Studio API - ENV TEMPLATE (PostgreSQL)

# Database (match infra/docker-compose.dev.yml host port)
DATABASE_URL="postgresql://ophius:ophius@localhost:5433/ophius?schema=public"

# API
NODE_ENV="development"
PORT=3001

# CORS / Origin allow lists (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"

# Cookies / session
COOKIE_SECRET="dev-secret-change-me"
COOKIE_SAMESITE="lax"
COOKIE_DOMAIN=""
COOKIE_SECURE=""
TRUST_PROXY=""
SESSION_TTL_SECONDS=43200

# Uploads
UPLOAD_DIR="./uploads"

# Seed admin account
SEED_ADMIN_USERNAME="admin"
SEED_ADMIN_PASSWORD="admin"
